<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_memo_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_whitefill_nonstroke_24radius"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_memo_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모 내용"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/item_memo_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 이름"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_memo_info_tv"
        app:layout_constraintStart_toStartOf="@id/item_memo_info_tv"/>

    <TextView
        android:id="@+id/item_memo_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 주소"
        android:textSize="12sp"
        android:textColor="@color/mt_main"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_memo_place_tv"
        app:layout_constraintStart_toStartOf="@id/item_memo_place_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:weightSum="7"
        app:layout_constraintTop_toTopOf="@id/item_memo_cl"
        app:layout_constraintBottom_toBottomOf="@id/item_memo_cl"
        app:layout_constraintEnd_toStartOf="@id/item_memo_toggle_sc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_sun_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_mon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_tue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_wed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot5_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_thu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot6_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_fri_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/item_memo_dot7_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_memo_dot"/>

            <TextView
                android:id="@+id/item_memo_sat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/item_memo_toggle_sc"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/category_toggle"/>

</androidx.constraintlayout.widget.ConstraintLayout>